{
  "name": "aimes.me.uk",
  "version": "1.0.0",
  "description": "Aimee's personal website",
  "private": true,
  "workspaces": [
    "styles",
    "site",
    "icons"
  ],
  "scripts": {
    "start": "wsrun -a start",
    "build": "yarn workspaces run build",
    "lint": "eslint . --ext=js,ts,tsx",
    "test": "mocha --file test/setup.js test/**/*.test.js",
    "test:update": "CHAI_JEST_SNAPSHOT_UPDATE_ALL=true yarn test",
    "validate": "html-validate './dist/**/*.html'",
    "broken-links": "linkinator ./dist",
    "prettier:list": "yarn prettier '**/*.{js,svg,yaml,yml}' --list-different",
    "prettier:fix": "yarn prettier '**/*.{js,svg,md,yaml,yml}' --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@prettier/plugin-xml": "^0.7.2",
    "backstopjs": "^5.0.1",
    "chai": "^4.2.0",
    "chai-jest-snapshot": "^2.0.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.10.1",
    "express": "^4.17.1",
    "html-validate": "^2.22.0",
    "husky": "^4.2.5",
    "linkinator": "^2.1.1",
    "lint-staged": "^10.2.10",
    "microformats-parser": "^1.3.0",
    "mocha": "^8.0.1",
    "prettier": "^2.0.4",
    "wsrun": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js}": "eslint --cache --fix",
    "*.{js,svg,md,yaml,yml}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
