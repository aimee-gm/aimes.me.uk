{
  "name": "aimes.me.uk",
  "version": "1.0.0",
  "description": "Aimee's personal website",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "build": "TZ=\"Europe/London\" yarn workspaces run build",
    "serve": "serve dist",
    "lint": "eslint . --ext=js,ts,tsx",
    "validate": "html-validate './dist/**/*.html'",
    "broken-links": "linkinator ./dist",
    "verify-images": "yarn workspace @aimee.gm/site verify-resized-images",
    "resize-images": "yarn workspace @aimee.gm/site resize-images"
  },
  "workspaces": [
    "site",
    "styles",
    "functions"
  ],
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "html-validate": "^2.19.0",
    "husky": "^3.1.0",
    "linkinator": "^2.0.6",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "serve": "^11.2.0"
  }
}
