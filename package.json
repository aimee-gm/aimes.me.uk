{
  "name": "aimes.me.uk",
  "version": "1.0.0",
  "description": "Aimee's personal website",
  "private": true,
  "workspaces": [
    "site",
    "styles",
    "icons"
  ],
  "scripts": {
    "start": "wsrun -a start",
    "build": "yarn workspaces run build",
    "lint": "eslint . --ext=js,ts,tsx",
    "validate": "html-validate './dist/**/*.html'",
    "broken-links": "linkinator ./dist",
    "prettier:list": "yarn prettier '**/*.{js,svg,md,yaml,yml}' --list-different",
    "prettier:fix": "yarn prettier '**/*.{js,svg,md,yaml,yml}' --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@prettier/plugin-xml": "^0.7.2",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "html-validate": "^2.19.0",
    "husky": "^4.2.5",
    "linkinator": "^2.0.6",
    "lint-staged": "^10.1.6",
    "prettier": "^2.0.4",
    "wsrun": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js}": "eslint --cache --fix",
    "*.{js,svg,md,yaml,yml}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
