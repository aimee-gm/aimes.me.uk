.site-footer {
  .container {
    padding: 2rem 1rem;
    align-items: center;
  }

  .footer-links {
    margin-bottom: 1.5rem;
  }

  .copyright {
    flex-grow: 1;
    padding: 0.25rem 0;
    margin-bottom: 0.5rem;
  }

  .social {
    white-space: nowrap;

    li {
      display: block;
      margin-bottom: 0.5rem;
    }

    a {
      display: inline-block;
      padding: 0.25rem 0.5rem;
      border-radius: var(--rounding);
      &:hover {
        background: var(--blue);
        color: var(--white);
      }
    }
  }

  .credits {
    text-align: center;
    opacity: 0.5;
    font-size: var(--size-sm);
  }

  @media (--viewport-sm) {
    .footer-links {
      display: flex;
    }
  }

  @media (--viewport-lg) {
    .social {
      display: flex;
      li {
        margin-left: 1rem;
      }
    }
  }
}
